<div class="app-response-container col-lg-12 col-md-12 app-md-card">
  <div class="media">
    <p class="pull-right">
      <small><%= time_ago_in_words(response.created_at) %> ago</small>
    </p>
    <i class="media-left user-image-holder" href="#">
      <img class="user-image" src=<%= response.user.image_url %>>
    </i>
    <div class="media-body">
      <h4 class="media-heading app-user-name"><%= response.user.name %></h4>
      <p><%= response.text %></p>
      <% unless get_all_unreviewed_taggings(response).empty? %>
          <%= render :partial => 'passages/candidate/tagging_status', locals: { tags: get_all_unreviewed_taggings(response) } %>
      <% end %>
    </div>
  </div>
</div>