<div class="row col-sm-10 center-block" data-tab-name="users">
  <h3 class="col-sm-6 center-block  visible-xs-block">Users Record</h3>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Active</th>
      <th>Role</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td>
            <%= form_for(user, :url => user_path(user.id), method: :put) do |form| %>
                <%= form.check_box :active, :class => 'submittable_active', :label => "" %>
            <% end %>
          </td>
          <td>
            <%= form_for(user, :url => user_path(user.id), method: :put) do |form| %>
              <%= form.select :role_id, @roles.collect { |b| [b.title, b.id] }, {}, {:class => 'submittable_role', :label => ""} %>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#app-add-user-modal">Add Users</button>

  <div id="app-add-user-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Users</h4>
        </div>
        <div class="modal-body app-add-users-modal-body">
          <%= form_tag(create_users_users_path, method: :post) do %>

              <%= email_field_tag :emails, '', placeholder: 'Add emails here', required: true, class: 'form-control', multiple: :multiple %>
              <%= submit_tag 'Add', class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>